{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ESNext",
    "sourceMap": true,
    "allowJs": false,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "baseUrl": ".",
    "paths": {
    },
    "removeComments": true,
    "newLine": "crlf"
  },
  "include": [ "pages" ],
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": true
}
